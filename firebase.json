{
  "hosting": {
    "public": ".next",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "/fonts/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "deploy": {
      "command": "firebase deploy --only hosting",
      "preview": "npm --prefix \"$RESOURCE_DIR\" run build && firebase deploy --only hosting --preview",
      "functions": "firebase deploy --only functions"
    },
    "functions": {
      "source": "functions"
    }
  }
}





